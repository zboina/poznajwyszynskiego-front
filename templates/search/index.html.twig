{# ═══════ Layout switcher ═══════ #}
<div class="layout-switcher" id="layoutSwitcher">
    <button data-layout="v1" title="Klasyczny">V1</button>
    <button data-layout="v2" title="Minimalistyczny">V2</button>
    <button data-layout="v3" title="Navy">V3</button>
    <button data-layout="v4" title="Landing Navy">V4</button>
    <button data-layout="v5" title="Landing Bordo">V5</button>
    <button data-layout="v6" title="Landing Jasny">V6</button>
</div>

<script>
(function(){
    const KEY = 'pw_layout';
    const page = document.querySelector('.page');
    const switcher = document.getElementById('layoutSwitcher');
    const saved = localStorage.getItem(KEY) || 'v1';

    function applyLayout(v) {
        page.classList.remove('layout-v2', 'layout-v3', 'layout-v4', 'layout-v5', 'layout-v6');
        if (v === 'v2') page.classList.add('layout-v2');
        if (v === 'v3') page.classList.add('layout-v3');
        if (v === 'v4') page.classList.add('layout-v4');
        if (v === 'v5') page.classList.add('layout-v5');
        if (v === 'v6') page.classList.add('layout-v6');
        switcher.querySelectorAll('button').forEach(function(btn){
            btn.classList.toggle('active', btn.dataset.layout === v);
        });
        localStorage.setItem(KEY, v);
    }

    applyLayout(saved);

    switcher.addEventListener('click', function(e){
        var btn = e.target.closest('button[data-layout]');
        if (btn) applyLayout(btn.dataset.layout);
    });

    /* ── Sticky shadow for filter strip ── */
    var filterStrip = document.querySelector('.filter-strip');
    if (filterStrip && window.IntersectionObserver) {
        var sentinel = document.createElement('div');
        sentinel.style.height = '1px';
        sentinel.style.marginBottom = '-1px';
        filterStrip.parentNode.insertBefore(sentinel, filterStrip);

        new IntersectionObserver(function(entries) {
            filterStrip.classList.toggle('stuck', !entries[0].isIntersecting);
        }, { threshold: 0 }).observe(sentinel);
    }

    /* ── Resizable document reader ── */
    (function() {
        var wrap = document.getElementById('docReaderWrap');
        var indicator = document.getElementById('docWidthIndicator');
        var viewer = document.getElementById('document-viewer');
        if (!wrap || !viewer) return;

        var handleL = viewer.querySelector('.doc-resize-handle--left');
        var handleR = viewer.querySelector('.doc-resize-handle--right');
        var handles = [handleL, handleR].filter(Boolean);
        var MIN_WIDTH = 400;
        var MAX_WIDTH = 1200;
        var STORAGE_KEY = 'pw_doc_width';

        // Restore saved width
        var savedWidth = parseInt(localStorage.getItem(STORAGE_KEY), 10);
        if (savedWidth && savedWidth >= MIN_WIDTH && savedWidth <= MAX_WIDTH) {
            wrap.style.maxWidth = savedWidth + 'px';
        }

        // Position handles next to card edges
        function positionHandles() {
            var card = wrap.querySelector('.doc-reader-card');
            if (!card) return;
            var rect = card.getBoundingClientRect();
            if (handleL) handleL.style.left = (rect.left - 26) + 'px';
            if (handleR) handleR.style.left = (rect.right + 4) + 'px';
        }

        // Reposition on scroll, resize, and periodically when viewer is active
        var posRAF = null;
        function schedulePosition() {
            if (posRAF) return;
            posRAF = requestAnimationFrame(function() {
                posRAF = null;
                if (viewer.classList.contains('active')) positionHandles();
            });
        }
        window.addEventListener('scroll', schedulePosition, { passive: true });
        window.addEventListener('resize', schedulePosition);

        // Observe viewer becoming active
        var obs = new MutationObserver(function() {
            if (viewer.classList.contains('active')) {
                setTimeout(positionHandles, 50);
            }
        });
        obs.observe(viewer, { attributes: true, attributeFilter: ['class'] });

        var startX, startWidth, activeHandle;

        handles.forEach(function(handle) {
            handle.addEventListener('mousedown', function(e) {
                e.preventDefault();
                activeHandle = handle;
                startX = e.clientX;
                startWidth = wrap.offsetWidth;

                handle.classList.add('dragging');
                wrap.classList.add('resizing');
                document.body.style.cursor = 'col-resize';
                document.body.style.userSelect = 'none';

                document.addEventListener('mousemove', onMouseMove);
                document.addEventListener('mouseup', onMouseUp);
            });

            handle.addEventListener('touchstart', function(e) {
                activeHandle = handle;
                startX = e.touches[0].clientX;
                startWidth = wrap.offsetWidth;

                handle.classList.add('dragging');
                wrap.classList.add('resizing');

                document.addEventListener('touchmove', onTouchMove, { passive: false });
                document.addEventListener('touchend', onTouchEnd);
            });
        });

        function onMouseMove(e) {
            var dx = e.clientX - startX;
            var side = activeHandle.dataset.resize;
            var newWidth = side === 'right' ? startWidth + dx * 2 : startWidth - dx * 2;
            newWidth = Math.max(MIN_WIDTH, Math.min(MAX_WIDTH, newWidth));
            wrap.style.maxWidth = newWidth + 'px';
            if (indicator) indicator.textContent = Math.round(newWidth) + 'px';
            positionHandles();
        }

        function onMouseUp() {
            document.removeEventListener('mousemove', onMouseMove);
            document.removeEventListener('mouseup', onMouseUp);
            document.body.style.cursor = '';
            document.body.style.userSelect = '';
            if (activeHandle) activeHandle.classList.remove('dragging');
            wrap.classList.remove('resizing');
            var w = parseInt(wrap.style.maxWidth, 10);
            if (w) localStorage.setItem(STORAGE_KEY, w);
            activeHandle = null;
            positionHandles();
        }

        function onTouchMove(e) {
            e.preventDefault();
            var dx = e.touches[0].clientX - startX;
            var side = activeHandle.dataset.resize;
            var newWidth = side === 'right' ? startWidth + dx * 2 : startWidth - dx * 2;
            newWidth = Math.max(MIN_WIDTH, Math.min(MAX_WIDTH, newWidth));
            wrap.style.maxWidth = newWidth + 'px';
            if (indicator) indicator.textContent = Math.round(newWidth) + 'px';
            positionHandles();
        }

        function onTouchEnd() {
            document.removeEventListener('touchmove', onTouchMove);
            document.removeEventListener('touchend', onTouchEnd);
            if (activeHandle) activeHandle.classList.remove('dragging');
            wrap.classList.remove('resizing');
            var w = parseInt(wrap.style.maxWidth, 10);
            if (w) localStorage.setItem(STORAGE_KEY, w);
            activeHandle = null;
            positionHandles();
        }
    })();

    /* ── Sticky title in doc navbar on scroll ── */
    (function() {
        var navbar = document.getElementById('docNavbar');
        var navTitle = document.getElementById('docNavTitle');
        var viewer = document.getElementById('document-viewer');
        if (!navbar || !navTitle || !viewer) return;

        var titleObserver = null;
        var currentTitleEl = null;

        function startObserving() {
            stopObserving();
            var titleEl = viewer.querySelector('.doc-title');
            if (!titleEl) return;
            currentTitleEl = titleEl;
            navTitle.textContent = titleEl.textContent;

            titleObserver = new IntersectionObserver(function(entries) {
                // Title scrolled out of view → show in navbar
                navbar.classList.toggle('show-title', !entries[0].isIntersecting);
            }, { threshold: 0, rootMargin: '-52px 0px 0px 0px' });
            titleObserver.observe(titleEl);
        }

        function stopObserving() {
            if (titleObserver) {
                titleObserver.disconnect();
                titleObserver = null;
            }
            currentTitleEl = null;
            navbar.classList.remove('show-title');
            navTitle.textContent = '';
        }

        // Re-observe whenever new document content loads
        var contentEl = viewer.querySelector('[data-search-target="documentContent"]');
        if (contentEl) {
            new MutationObserver(function() {
                if (viewer.classList.contains('active')) {
                    // Small delay to ensure DOM is rendered
                    setTimeout(startObserving, 80);
                } else {
                    stopObserving();
                }
            }).observe(contentEl, { childList: true });
        }

        // Also stop when viewer deactivates
        new MutationObserver(function() {
            if (!viewer.classList.contains('active')) {
                stopObserving();
            }
        }).observe(viewer, { attributes: true, attributeFilter: ['class'] });
    })();

    /* ── Reading progress indicator ── */
    (function() {
        var viewer = document.getElementById('document-viewer');
        var pctEl = document.getElementById('docReadPct');
        var fillEl = document.getElementById('docProgressFill');
        if (!viewer || !pctEl || !fillEl) return;

        var raf = null;
        var active = false;

        function updateProgress() {
            var card = viewer.querySelector('.doc-reader-card');
            if (!card) return;

            var rect = card.getBoundingClientRect();
            var navH = 54; // navbar height + progress bar
            var viewH = window.innerHeight - navH;

            // How much of card is above the viewport bottom
            var scrolled = navH - rect.top;
            var total = rect.height - viewH;

            if (total <= 0) {
                // Entire content fits in viewport
                pctEl.textContent = '100%';
                fillEl.style.width = '100%';
                return;
            }

            var pct = Math.max(0, Math.min(100, Math.round((scrolled / total) * 100)));
            pctEl.textContent = pct + '%';
            fillEl.style.width = pct + '%';
        }

        function onScroll() {
            if (!active) return;
            if (raf) return;
            raf = requestAnimationFrame(function() {
                raf = null;
                updateProgress();
            });
        }

        window.addEventListener('scroll', onScroll, { passive: true });
        window.addEventListener('resize', onScroll);

        // Activate/deactivate with viewer
        var contentEl = viewer.querySelector('[data-search-target="documentContent"]');
        if (contentEl) {
            new MutationObserver(function() {
                if (viewer.classList.contains('active')) {
                    active = true;
                    setTimeout(updateProgress, 100);
                } else {
                    active = false;
                    pctEl.textContent = '0%';
                    fillEl.style.width = '0%';
                }
            }).observe(contentEl, { childList: true });
        }

        new MutationObserver(function() {
            if (!viewer.classList.contains('active')) {
                active = false;
                pctEl.textContent = '0%';
                fillEl.style.width = '0%';
            }
        }).observe(viewer, { attributes: true, attributeFilter: ['class'] });
    })();
})();
</script>
