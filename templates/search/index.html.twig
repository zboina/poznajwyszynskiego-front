{% extends 'base.html.twig' %}

{% block title %}Wyszukiwarka — Dzieła Zebrane Kardynała Wyszyńskiego{% endblock %}
{% block body_class %}d-flex flex-column{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --brand: #722F37;
        --brand-dark: #5C2630;
        --brand-navy: #1A365D;
        --brand-gold: #C9A227;
        --brand-cream: #FAF8F5;
        --tblr-primary: #722F37;
        --tblr-primary-rgb: 114,47,55;
    }
    :root, :host { margin-left: 0 !important; margin-right: 0 !important; }
    body { background: var(--brand-cream); }

    /* ═══════ NAVBAR ═══════ */
    .app-navbar {
        background: var(--brand);
        box-shadow: 0 2px 8px rgba(0,0,0,.15);
        position: relative;
        z-index: 200;
    }
    .brand-mark {
        display: flex; align-items: center; gap: .5rem;
        text-decoration: none; color: #fff;
    }
    .brand-mark img { border: 2px solid rgba(201,162,39,.45); }
    .brand-mark span { font-weight: 700; font-size: .9rem; letter-spacing: .01em; }
    .user-pill {
        display: inline-flex; align-items: center; gap: .35rem;
        background: rgba(255,255,255,.12); border: 1px solid rgba(255,255,255,.15);
        border-radius: 20px; padding: .25rem .65rem .25rem .45rem;
        color: #fff; font-size: .78rem; white-space: nowrap;
    }
    .user-pill .role-badge {
        font-size: .6rem; padding: .1rem .4rem; border-radius: 10px; font-weight: 700;
        text-transform: uppercase; letter-spacing: .04em;
    }
    .views-pill {
        display: inline-flex; align-items: center; gap: .3rem;
        background: rgba(201,162,39,.2); border: 1px solid rgba(201,162,39,.3);
        border-radius: 20px; padding: .2rem .6rem;
        color: #C9A227; font-size: .75rem; font-weight: 600;
    }

    /* ═══════ HERO ═══════ */
    .search-hero {
        background: linear-gradient(160deg, #722F37 0%, #5C2630 35%, #3D1F38 65%, #1A365D 100%);
        position: relative; overflow: hidden;
        padding: 2.5rem 0 2rem;
    }
    .search-hero::before {
        content: ''; position: absolute; inset: 0;
        background:
            radial-gradient(circle at 15% 85%, rgba(201,162,39,.07) 0%, transparent 50%),
            radial-gradient(circle at 85% 15%, rgba(26,54,93,.12) 0%, transparent 40%);
        pointer-events: none;
    }
    .hero-title { font-size: 1.6rem; font-weight: 800; letter-spacing: -.01em; font-family: var(--font-heading) !important; }
    .hero-subtitle { font-size: .92rem; opacity: .7; font-family: var(--font-heading) !important; }

    /* ── Stats row ── */
    .stats-row {
        display: flex; gap: .5rem; justify-content: center; flex-wrap: wrap;
    }
    .stat-badge {
        display: inline-flex; align-items: center; gap: .35rem;
        background: rgba(255,255,255,.08); border: 1px solid rgba(255,255,255,.1);
        border-radius: 8px; padding: .35rem .7rem;
        font-size: .8rem; color: rgba(255,255,255,.65);
        backdrop-filter: blur(6px);
    }
    .stat-badge strong { color: #C9A227; font-weight: 800; }
    .stat-badge svg { opacity: .5; }

    /* ── Search bar ── */
    .search-bar {
        max-width: 680px; margin: 0 auto; position: relative;
    }
    .search-bar input {
        width: 100%; padding: .85rem 1rem .85rem 3.2rem;
        font-size: 1.05rem; color: #fff;
        background: rgba(255,255,255,.1);
        border: 2px solid rgba(255,255,255,.18);
        border-radius: 14px;
        backdrop-filter: blur(12px);
        outline: none;
        transition: all .2s;
    }
    .search-bar input::placeholder { color: rgba(255,255,255,.35); }
    .search-bar input:focus {
        border-color: var(--brand-gold);
        background: rgba(255,255,255,.14);
        box-shadow: 0 0 0 4px rgba(201,162,39,.12), 0 8px 24px rgba(0,0,0,.15);
    }
    .search-bar .bar-icon {
        position: absolute; left: 1.1rem; top: 50%; transform: translateY(-50%);
        color: rgba(255,255,255,.4); pointer-events: none;
    }
    .search-hint {
        font-size: .72rem; opacity: .4; margin-top: .5rem;
    }

    /* ═══════ FILTERS ═══════ */
    .filter-strip {
        background: #fff;
        border-bottom: 1px solid #eee;
        box-shadow: 0 1px 4px rgba(0,0,0,.03);
    }
    .filter-grid { display: flex; }
    .filter-strip [data-search-target="tagsContainer"] { display: flex; }
    .filter-strip label {
        font-size: .65rem; text-transform: uppercase; letter-spacing: .06em;
        color: #999; font-weight: 700; margin-bottom: .2rem;
    }
    .filter-strip .form-select,
    .filter-strip .form-control {
        font-size: .82rem; border-radius: 8px; border-color: #e8e4de;
        background-color: #fafaf8;
    }
    .filter-strip .form-select:focus,
    .filter-strip .form-control:focus {
        border-color: var(--brand); box-shadow: 0 0 0 3px rgba(114,47,55,.08);
    }
    .btn-reset {
        font-size: .78rem; color: #999; border: 1px solid #e0dbd5;
        border-radius: 8px; padding: .3rem .6rem; background: #fff;
        transition: all .15s; display: inline-flex; align-items: center; gap: .3rem;
    }
    .btn-reset:hover { color: var(--brand); border-color: var(--brand); }

    /* ── Filter toggle (mobile) ── */
    .filter-toggle-bar {
        display: none;
        align-items: center; justify-content: space-between;
        padding: .55rem 0; cursor: pointer; user-select: none;
    }
    .filter-toggle-bar span {
        display: inline-flex; align-items: center; gap: .45rem;
        font-size: .95rem; font-weight: 700; color: #333;
    }
    .filter-toggle-bar svg { flex-shrink: 0; }
    .filter-count-badge {
        display: none;
        align-items: center; justify-content: center;
        min-width: 1.3rem; height: 1.3rem;
        font-size: .7rem; font-weight: 800; color: #fff;
        background: var(--brand); border-radius: 50%;
        padding: 0 .35rem; line-height: 1;
    }
    .filter-count-badge.visible { display: inline-flex; }
    .filter-chevron {
        transition: transform .2s ease; color: #666;
    }
    .filters-open .filter-chevron { transform: rotate(180deg); }
    /* stuck (dark bg) variants for toggle bar */
    .filter-strip.stuck .filter-toggle-bar span { color: #fff; }
    .filter-strip.stuck .filter-toggle-bar svg { stroke: #fff; }
    .filter-strip.stuck .filter-chevron { color: rgba(255,255,255,.7); stroke: rgba(255,255,255,.7); }

    /* ── Tags ── */
    .tag-chip {
        cursor: pointer; user-select: none;
        display: inline-block; font-size: .75rem;
        padding: .2rem .6rem; border-radius: 20px;
        border: 1px solid #ddd; color: #777; background: #fff;
        transition: all .15s;
    }
    .tag-chip:hover { border-color: var(--brand); color: var(--brand); background: rgba(114,47,55,.03); }
    .tag-chip.active { background: var(--brand); color: #fff; border-color: var(--brand); }

    /* ═══════ RESULTS ═══════ */
    .search-active .results-area { min-height: 300px; }

    .result-card {
        background: #fff; border-radius: 10px;
        border: 1px solid #eee; border-left: 4px solid transparent;
        cursor: pointer; transition: all .2s;
        padding: 1rem 1.25rem;
    }
    .result-card:hover {
        border-left-color: var(--brand);
        box-shadow: 0 4px 16px rgba(114,47,55,.08);
        transform: translateX(2px);
    }
    .result-card .rc-title {
        font-size: .95rem; font-weight: 600; color: #2D2D2D;
        margin: 0 0 .15rem; line-height: 1.35;
        font-family: var(--font-heading) !important;
    }
    .result-card:hover .rc-title { color: var(--brand); }
    .result-card .rc-subtitle {
        font-size: .82rem; color: #888; margin: 0 0 .4rem;
    }
    .result-card .rc-meta {
        display: flex; flex-wrap: wrap; gap: .15rem .5rem;
        font-size: .72rem; color: #aaa;
    }
    .result-card .rc-meta span { display: inline-flex; align-items: center; gap: .25rem; }
    .result-card .rc-snippet {
        font-size: .78rem; color: #999; margin: .5rem 0 0;
        line-height: 1.5; display: -webkit-box;
        -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;
    }
    .result-card .rc-arrow {
        color: #ddd; flex-shrink: 0; transition: color .15s, transform .15s;
    }
    .result-card:hover .rc-arrow { color: var(--brand); transform: translateX(3px); }

    .results-summary {
        font-size: .82rem; color: #999; margin-bottom: .75rem;
        display: flex; align-items: center; justify-content: space-between;
    }
    .results-summary strong { color: #555; }

    /* ── Colors / utility ── */
    .text-gold { color: #C9A227; }
    .bg-navy { background: var(--brand-navy); }
    .spinner-border { color: var(--brand); }

    /* ═══════ VIEWED DOCUMENTS ═══════ */
    .result-card.rc-viewed {
        background: #f8fdf8;
        border-left-color: #2fb344;
    }
    .result-card.rc-viewed:hover {
        border-left-color: #2fb344;
    }
    .rc-viewed-badge {
        display: inline-flex;
        align-items: center;
        gap: .25rem;
        font-size: .65rem;
        font-weight: 600;
        color: #2fb344;
        background: rgba(47,179,68,.08);
        padding: .1rem .45rem;
        border-radius: 10px;
        margin-left: .4rem;
        vertical-align: middle;
        font-family: var(--font-body) !important;
    }
    .rc-viewed-badge svg {
        color: #2fb344;
        opacity: .7;
    }

    /* ═══════ ADMIN LINK ═══════ */
    .admin-link {
        display: inline-flex;
        align-items: center;
        gap: .3rem;
        color: rgba(255,255,255,.6);
        font-size: .75rem;
        font-weight: 600;
        text-decoration: none;
        padding: .2rem .55rem;
        border-radius: 6px;
        border: 1px solid rgba(255,255,255,.12);
        transition: all .15s;
    }
    .admin-link:hover {
        color: #fff;
        background: rgba(255,255,255,.1);
        border-color: rgba(255,255,255,.25);
    }
    .layout-v2 .admin-link {
        color: #999;
        border-color: #e0dbd5;
    }
    .layout-v2 .admin-link:hover {
        color: var(--brand);
        border-color: var(--brand);
        background: rgba(114,47,55,.04);
    }
    .layout-v6 .admin-link {
        color: #999;
        border-color: #e0dbd5;
    }
    .layout-v6 .admin-link:hover {
        color: var(--brand);
        border-color: var(--brand);
        background: rgba(114,47,55,.04);
    }

    /* ═══════ MY VIEWS DROPDOWN ═══════ */
    .views-pill {
        cursor: pointer;
        border: 1px solid rgba(201,162,39,.3);
    }
    .views-pill:hover {
        background: rgba(201,162,39,.3);
    }
    .my-views-dropdown {
        display: none;
        position: absolute;
        top: calc(100% + 8px);
        right: 0;
        width: 300px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 8px 32px rgba(0,0,0,.15);
        border: 1px solid #eee;
        z-index: 9100;
        overflow: hidden;
        animation: mvSlide .15s ease;
    }
    .my-views-dropdown.active { display: block; }
    @keyframes mvSlide {
        from { opacity: 0; transform: translateY(-6px); }
        to   { opacity: 1; transform: translateY(0); }
    }
    .mv-header {
        display: flex; align-items: center; justify-content: space-between;
        padding: .5rem .75rem;
        border-bottom: 1px solid #f0ece6;
        font-size: .7rem; font-weight: 700; text-transform: uppercase;
        letter-spacing: .05em; color: #999;
    }
    .mv-close {
        background: none; border: none; font-size: 1.1rem; color: #bbb;
        cursor: pointer; line-height: 1; padding: 0 .2rem;
    }
    .mv-close:hover { color: #555; }
    .mv-list { }
    .mv-item {
        display: flex; align-items: center; gap: .5rem;
        padding: .45rem .75rem;
        border-bottom: 1px solid #f8f5f0;
        text-decoration: none;
        color: inherit;
        transition: background .1s;
    }
    .mv-item:last-child { border-bottom: none; }
    .mv-item:hover { background: #faf8f5; }
    .mv-title {
        flex: 1; min-width: 0;
        font-size: .8rem; font-weight: 600; color: #333;
        white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
    }
    .mv-item:hover .mv-title { color: var(--brand); }
    .mv-time {
        flex-shrink: 0;
        font-size: .68rem; color: #aaa; font-variant-numeric: tabular-nums;
    }
    .mv-empty {
        padding: 1rem; text-align: center;
        font-size: .82rem; color: #bbb;
    }
    @media (max-width: 575.98px) {
        .my-views-dropdown { width: 260px; right: -1rem; }
    }

    /* ═══════ SEARCH HIGHLIGHT ═══════ */
    .search-hl {
        background: linear-gradient(135deg, rgba(201,162,39,.25) 0%, rgba(201,162,39,.35) 100%);
        color: inherit;
        padding: .05em .2em;
        border-radius: 3px;
        border-bottom: 2px solid rgba(201,162,39,.6);
        font-style: inherit;
    }
    .result-card .search-hl {
        background: rgba(201,162,39,.18);
        border-bottom-width: 1px;
        padding: .02em .15em;
    }

    /* ═══════ DOCUMENT HEADER ═══════ */
    .doc-header {
        position: relative;
        background: linear-gradient(175deg, #faf8f4 0%, #fff 100%);
    }
    .doc-accent-bar {
        height: 4px;
        background: linear-gradient(90deg, var(--brand) 0%, #C9A227 60%, rgba(201,162,39,.15) 100%);
    }
    .doc-header-inner {
        padding: 1.75rem 2.5rem 1.5rem;
    }

    /* Top row: badges + actions */
    .doc-header-top {
        display: flex; align-items: center; flex-wrap: wrap; gap: .5rem;
        margin-bottom: 1.1rem;
    }
    .doc-header-actions {
        display: flex; align-items: center; gap: .5rem;
        margin-left: auto;
    }
    .doc-volume-badge {
        display: inline-flex; align-items: center;
        font-size: .72rem; font-weight: 700; text-transform: uppercase; letter-spacing: .08em;
        color: #fff; background: var(--brand);
        padding: .3rem .7rem; border-radius: 4px;
    }
    .doc-type-badge {
        display: inline-flex; align-items: center;
        font-size: .68rem; font-weight: 600; text-transform: uppercase; letter-spacing: .05em;
        color: #7a6c55; background: #f0ebe2;
        padding: .25rem .6rem; border-radius: 4px;
    }
    .doc-views-badge {
        display: inline-flex; align-items: center; gap: .25rem;
        font-size: .72rem; font-weight: 600;
        color: #888; background: #f5f3ef;
        border: 1px solid #e8e0d4;
        padding: .22rem .55rem; border-radius: 5px;
    }
    .doc-pdf-btn {
        display: inline-flex; align-items: center; gap: .3rem;
        font-size: .72rem; font-weight: 700;
        color: #C9A227; background: rgba(201,162,39,.08);
        border: 1px solid rgba(201,162,39,.22);
        padding: .22rem .65rem; border-radius: 5px;
        text-decoration: none; transition: all .15s;
    }
    .doc-pdf-btn:hover {
        background: rgba(201,162,39,.18); color: #a8871f;
    }

    /* Title */
    .doc-title {
        font-family: var(--font-heading) !important;
        font-size: 1.65rem; font-weight: 800; color: #1a1a1a;
        margin: 0 0 .35rem; line-height: 1.3;
        letter-spacing: -.01em;
    }
    .doc-subtitle {
        font-size: 1rem; color: #6b5e50; margin: 0 0 .15rem;
        font-style: italic; line-height: 1.5;
    }

    /* Metadata */
    .doc-meta {
        display: flex; flex-wrap: wrap; gap: .5rem .9rem;
        margin-top: 1rem;
        padding-top: .85rem;
        border-top: 1px solid #ece7df;
    }
    .doc-meta-item {
        display: inline-flex; align-items: center; gap: .35rem;
        font-size: .82rem; font-weight: 500; color: #555;
    }
    .doc-meta-item svg { color: var(--brand); opacity: .55; flex-shrink: 0; }
    .doc-meta-addressee { color: #777; font-style: italic; font-weight: 400; }
    .doc-meta-words { color: #aaa; font-weight: 400; }

    /* Tags */
    .doc-tags {
        display: flex; flex-wrap: wrap; gap: .35rem;
        margin-top: 1rem;
    }
    .doc-tag {
        font-size: .67rem; font-weight: 600; text-transform: uppercase; letter-spacing: .04em;
        color: #8a7a64; background: #f0ebe2;
        padding: .18rem .55rem; border-radius: 3px;
        transition: background .15s;
    }
    .doc-tag:hover { background: #e8e0d2; }

    /* Bottom border */
    .doc-header-border {
        height: 1px;
        background: #ece7df;
    }

    /* ═══════ DOCUMENT BODY ═══════ */
    .doc-body { font-size: 1.05rem; line-height: 1.9; color: #2D2D2D; font-family: var(--font-body) !important; }
    .doc-body p { margin-bottom: 1em; text-indent: 1.5em; }
    .doc-body p:first-child { text-indent: 0; }
    .doc-body h2, .doc-body h3 { color: var(--brand); margin-top: 1.5em; margin-bottom: .5em; text-indent: 0; }

    /* ── Footnotes ── */
    .footnotes { margin-top: 2.5em; padding-top: 1.5em; font-size: .88rem; color: #555; border-top: 1px solid #ddd; }
    .footnotes ol { padding-left: 1.5em; }
    .footnotes li { margin-bottom: .6em; line-height: 1.6; }
    .footnotes li:target { background: #fef9e7; border-radius: 4px; padding: 2px 4px; }
    .footnote-ref { position: relative; }
    .footnote-ref a {
        display: inline-flex; align-items: center; justify-content: center;
        min-width: 1.3em; height: 1.3em; padding: 0 .25em;
        font-size: .7em; font-weight: 700; line-height: 1;
        color: var(--brand); background: rgba(114,47,55,.08); border-radius: 3px;
        text-decoration: none; vertical-align: super;
        transition: background .15s, color .15s;
    }
    .footnote-ref a:hover { background: var(--brand); color: #fff; }
    .footnote-ref a[data-tooltip] { cursor: help; }
    .footnote-ref a[data-tooltip]::after {
        content: attr(data-tooltip);
        position: absolute; bottom: 130%; left: 50%; transform: translateX(-50%);
        width: max-content; max-width: 350px;
        padding: .5em .75em; border-radius: 6px;
        background: #2D2D2D; color: #f5f5f5;
        font-size: 11.5px; font-weight: 400; line-height: 1.5;
        white-space: normal; text-align: left;
        box-shadow: 0 4px 16px rgba(0,0,0,.2);
        opacity: 0; pointer-events: none; transition: opacity .2s; z-index: 1000;
    }
    .footnote-ref a[data-tooltip]:hover::after { opacity: 1; }
    .footnote-back { color: #999; text-decoration: none; font-size: .85em; margin-left: .3em; }
    .footnote-back:hover { color: var(--brand); }

    /* ═══════ DOCUMENT VIEWER ═══════ */
    #document-viewer { display: none; }
    #document-viewer.active { display: block; animation: slideUp .3s ease; }
    #search-area.hidden { display: none; }
    @keyframes slideUp {
        from { opacity: 0; transform: translateY(12px); }
        to   { opacity: 1; transform: translateY(0); }
    }

    /* ── Doc navbar ── */
    .doc-navbar {
        position: sticky; top: 0; z-index: 200;
        background: #fff !important;
        box-shadow: 0 1px 0 #e8e0d4, 0 3px 12px rgba(0,0,0,.04) !important;
        border-bottom: none !important;
    }
    .doc-nav-back {
        display: inline-flex; align-items: center; gap: .4rem;
        background: none; border: 1px solid #e0dbd3;
        color: #555; font-size: .82rem; font-weight: 600;
        cursor: pointer; padding: .35rem .75rem .35rem .5rem; border-radius: 8px;
        transition: all .15s;
    }
    .doc-nav-back svg { color: var(--brand); }
    .doc-nav-back:hover { background: #faf7f3; border-color: #ccc; color: #333; }

    .doc-nav-group {
        display: flex; align-items: center;
        background: #f8f5f0; border: 1px solid #e8e2d8;
        border-radius: 8px; overflow: hidden;
    }
    .doc-nav-arrow {
        display: inline-flex; align-items: center; justify-content: center;
        background: none; border: none;
        color: #777; width: 34px; height: 34px;
        cursor: pointer; transition: all .15s;
    }
    .doc-nav-arrow:hover { background: #ede8e0; color: var(--brand); }
    .doc-nav-arrow[disabled], .doc-nav-arrow.disabled {
        opacity: .3; pointer-events: none;
    }
    .doc-nav-counter {
        font-size: .75rem; font-weight: 700; letter-spacing: .02em;
        color: #888;
        min-width: 3.2rem; text-align: center;
        border-left: 1px solid #e8e2d8; border-right: 1px solid #e8e2d8;
        padding: .25rem .1rem;
    }
    .doc-nav-shortcut {
        font-size: .65rem; font-weight: 500; color: #bbb;
        margin-left: .5rem;
        display: none;
    }
    @media (min-width: 768px) { .doc-nav-shortcut { display: inline; } }

    /* Floating title in navbar */
    .doc-nav-title {
        flex: 1; min-width: 0;
        margin: 0 1rem;
        font-size: .8rem; font-weight: 700; color: #333;
        white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
        text-align: center;
        opacity: 0; transform: translateY(8px);
        transition: opacity .25s ease, transform .25s ease;
        pointer-events: none;
    }
    .doc-navbar.show-title .doc-nav-title {
        opacity: 1; transform: translateY(0);
    }
    @media (max-width: 575.98px) {
        .doc-nav-title { font-size: .72rem; margin: 0 .5rem; }
    }

    /* Reading progress */
    .doc-read-pct {
        font-size: .7rem; font-weight: 700; letter-spacing: .03em;
        color: #bbb; font-variant-numeric: tabular-nums;
        min-width: 2.2rem; text-align: right;
        transition: color .3s;
    }
