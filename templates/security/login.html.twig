{% extends 'base.html.twig' %}

{% block title %}Dzieła Zebrane Kardynała Stefana Wyszyńskiego{% endblock %}
{% block body_class %}d-flex flex-column{% endblock %}

{% block stylesheets %}
<style>
    :root { --tblr-primary: #722F37; --tblr-primary-rgb: 114,47,55; }

    /* ── Clean background ── */
    .login-page {
        min-height: 100vh;
        background: #FAF8F5;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .login-wrapper {
        width: 100%;
        max-width: 440px;
    }

    /* ── Header ── */
    .login-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }
    .login-logo {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 2px solid #e8e0d4;
        margin-bottom: 1.5rem;
    }
    .login-title {
        font-family: var(--font-heading) !important;
        font-size: 1.75rem;
        font-weight: 700;
        color: #1a1a1a;
        margin: 0 0 .25rem;
        letter-spacing: -.01em;
    }
    .login-subtitle {
        font-size: .95rem;
        color: #888;
        font-weight: 400;
        margin: 0;
    }

    /* ── Card ── */
    .login-card {
        background: #fff;
        border: 1px solid #e8e0d4;
        border-radius: 12px;
        padding: 2.25rem;
    }

    .login-card .form-label {
        font-size: .82rem;
        font-weight: 500;
        color: #555;
        margin-bottom: .35rem;
    }
    .login-card .form-control {
        background: #FAFAF8;
        border: 1px solid #ddd;
        border-radius: 8px;
        color: #1a1a1a;
        font-size: .95rem;
        padding: .65rem .9rem;
        transition: border-color .2s, box-shadow .2s;
    }
    .login-card .form-control::placeholder { color: #bbb; }
    .login-card .form-control:focus {
        background: #fff;
        border-color: #722F37;
        box-shadow: 0 0 0 3px rgba(114,47,55,.08);
    }

    /* ── Button ── */
    .btn-login {
        background: #722F37;
        color: #fff;
        font-weight: 600;
        font-size: .95rem;
        border: none;
        border-radius: 8px;
        padding: .7rem 1.5rem;
        width: 100%;
        transition: background .2s;
        letter-spacing: .01em;
    }
    .btn-login:hover {
        background: #5C2630;
        color: #fff;
    }
    .btn-login:active {
        background: #4a1f28;
    }

    /* ── Stats row ── */
    .stats-row {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 2rem;
    }
    .stat-item {
        text-align: center;
    }
    .stat-number {
        font-family: var(--font-heading) !important;
        font-size: 1.35rem;
        font-weight: 700;
        color: #722F37;
        line-height: 1.2;
    }
    .stat-number small { font-size: .6em; font-weight: 600; }
    .stat-label {
        font-size: .7rem;
        color: #aaa;
        text-transform: uppercase;
        letter-spacing: .08em;
        margin-top: .15rem;
    }

    /* ── Divider ── */
    .login-divider {
        height: 1px;
        background: #e8e0d4;
        margin: 1.75rem 0;
    }

    /* ── Quote ── */
    .login-quote {
        text-align: center;
        font-style: italic;
        font-size: .85rem;
        color: #999;
        line-height: 1.7;
        margin-top: 2rem;
        padding: 0 1rem;
    }
    .login-quote .author {
        display: block;
        font-style: normal;
        font-size: .75rem;
        color: #bbb;
        margin-top: .5rem;
    }

    /* ── Footer ── */
    .login-footer {
        text-align: center;
        margin-top: 1.5rem;
        font-size: .78rem;
        color: #bbb;
    }
    .login-footer a {
        color: #722F37;
        text-decoration: none;
    }
    .login-footer a:hover { text-decoration: underline; }

    /* ── Error ── */
    .login-card .alert-danger {
        background: #fef2f2;
        border: 1px solid #f0d0d0;
        color: #722F37;
        border-radius: 8px;
        font-size: .88rem;
        padding: .6rem 1rem;
    }

    /* ── Responsive ── */
    @media (max-width: 480px) {
        .login-page { padding: 1.5rem 1rem; }
        .login-card { padding: 1.75rem 1.5rem; }
        .login-logo { width: 64px; height: 64px; }
        .login-title { font-size: 1.5rem; }
        .stats-row { gap: 1.25rem; }
        .stat-number { font-size: 1.15rem; }
    }
</style>
{% endblock %}

{% block body %}
<div class="login-page">
    <div class="login-wrapper">

        {# ── Header ── #}
        <div class="login-header">
            <img src="{{ asset('logo_PW_bez_obramowania.png') }}" alt="Logo" class="login-logo">
            <h1 class="login-title">Dzieła Zebrane</h1>
            <p class="login-subtitle">Kardynała Stefana Wyszyńskiego</p>
        </div>

        {# ── Login form ── #}
        <div class="login-card">
            {% if error %}
                <div class="alert alert-danger mb-3">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label class="form-label" for="inputEmail">Adres e-mail</label>
                    <input type="email" name="_username" id="inputEmail"
                           class="form-control"
                           value="{{ last_username }}"
                           placeholder="email@example.com"
                           autocomplete="email"
                           autofocus required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="inputPassword">Hasło</label>
                    <input type="password" name="_password" id="inputPassword"
                           class="form-control"
                           placeholder="Hasło"
                           autocomplete="current-password"
                           required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="login-divider"></div>

                <button type="submit" class="btn-login">
                    Zaloguj się
                </button>
            </form>
        </div>

        {# ── Quote ── #}
        <div class="login-quote">
            &bdquo;Wszystko postawiłem na Maryję. I jeszcze nigdy na tym nie straciłem
            i stracić nie mogę.&rdquo;
            <span class="author">&mdash; Stefan Kardynał Wyszyński</span>
        </div>

        {# ── Footer ── #}
        <div class="login-footer">
            <a href="https://poznajwyszynskiego.pl">poznajwyszynskiego.pl</a>
        </div>

    </div>
</div>
{% endblock %}
